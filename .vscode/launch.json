    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'QR2M'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=QR2M",
                    "--package=QR2M"
                ],
                "filter": {
                    "name": "QR2M",
                    "kind": "bin"
                }
            },
            // "args": ["-e", "256"],
            // "args": ["-e", "128", "--debug"],
            "args": ["-e", "256", "--debug", "-p", "123"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'QR2M'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=QR2M",
                    "--package=QR2M"
                ],
                "filter": {
                    "name": "QR2M",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}